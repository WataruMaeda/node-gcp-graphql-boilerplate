{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": [2, "never"],
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "import/named": 0,
    "camelcase": 0,
    "prettier/prettier": "error"
  },
  "globals": {
    "Buffer": true
  }
}
